<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey700</item>
        <item name="colorPrimaryDark">@color/grey900</item>
        <item name="colorAccent">@color/green700</item>
        <item name="android:background">@color/grey900</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/green700</item>
        <item name="colorPrimaryDark">@color/green900</item>
        <item name="colorAccent">@color/green700</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
