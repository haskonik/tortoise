<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/shuffle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_track_recycler_view"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@null"
        android:visibility="invisible"
        android:src="@drawable/ic_shuffled"
        android:tint="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/search_edit_text"
        android:id="@+id/fragment_track_recycler_view"
        android:scrollbars="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:text="@string/obtaining_tracks_data"
        android:layout_centerHorizontal="true"
        android:id="@+id/obtaining_text_track_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_list_progress"/>

    <ProgressBar
        android:id="@+id/track_list_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_centerInParent="true" />

</RelativeLayout>