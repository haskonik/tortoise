<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@id/notification_previous"
            android:background="@null"
            android:orientation="vertical"
            android:id="@+id/linearLayout3">

        <TextView
                android:id="@+id/notification_composition_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:background="@null"
                android:singleLine="true"
                android:layout_margin="4dp"
                android:text="@string/song_name_test"
                android:textColor="@color/grey900"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/notification_composition_author"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:background="@null"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="@color/grey900"
                android:text="@string/song_author_test"/>


    </LinearLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previous"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_margin="16dp"
            android:tint="@color/grey900"
            android:layout_toStartOf="@id/notification_play_pause"
            android:id="@+id/notification_previous"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/notification_next"
            android:src="@drawable/ic_play"
            android:background="@null"
            android:tint="@color/grey900"
            android:id="@+id/notification_play_pause"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next"
            android:background="@null"
            android:tint="@color/grey900"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:id="@+id/notification_next"/>

</RelativeLayout>